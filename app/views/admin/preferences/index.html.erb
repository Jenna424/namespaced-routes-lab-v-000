<h1>Admin Access to Display Preferences</h1>

<%= form_for @preference, url: admin_preference_path(@preference) do |f| %>
  <div>
    <%= f.label :allow_create_artists, "Allow Creation of Artists" %><br>
    True: <%= f.radio_button :allow_create_artists, true %>
    False: <%= f.radio_button :allow_create_artists, false %>
  </div>
  <br>
  <div>
    <%= f.label :allow_create_songs, "Allow Creation of Songs" %><br>
    True: <%= f.radio_button :allow_create_songs, true %>
    False: <%= f.radio_button :allow_create_songs, false %>
  </div>
  <br>
  <div>
    <%= f.label :song_sort_order, "Song Sort Order:" %><br>
    ASC: <%= f.radio_button :song_sort_order, "ASC" %>
    DESC: <%= f.radio_button :song_sort_order, "DESC" %>
  </div>
  <br>
  <div>
    <%= f.label :artist_sort_order, "Artist Sort Order:" %><br>
    ASC: <%= f.radio_button :artist_sort_order, "ASC" %>
    DESC: <%= f.radio_button :artist_sort_order, "DESC" %>
  </div>
  <br>
  <%= f.submit %>
<% end %>
